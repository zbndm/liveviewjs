{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2019",
    "lib": ["es2019", "esnext.asynciterable", "DOM"],
    "types": ["node"],
    "outDir": "./dist",
    "baseUrl": "."
  },
  "include": ["app/**/*", "config/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "app/assets/**/*"]
}
